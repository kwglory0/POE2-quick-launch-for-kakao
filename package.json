    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.0-beta.28",
        "@types/chrome": "^0.1.32",
        "@types/jsdom": "^27.0.0",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "bestzip": "^2.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jsdom": "^27.4.0",
        "lint-staged": "^16.2.7",
