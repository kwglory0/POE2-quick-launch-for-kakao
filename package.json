{
    "name": "poe-poe2-quick-launch-for-kakao",
    "private": true,
    "version": "1.1.0",
    "type": "module",
    "description": "Kakao Games Path of Exile (1 & 2) Quick Launch Extension",
    "author": "NERDHEAD LAB",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/NERDHEAD-lab/POE2-quick-launch-for-kakao.git"
    },
