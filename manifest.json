{
    "manifest_version": 3,
    "name": "POE2 빠른 실행 (Kakao)",
    "description": "Kakao Games POE2 홈페이지 접속 시 게임 자동 실행 및 팝업/탭 자동 닫기 기능 제공",
    "version": "1.0.0",
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.game.daum.net/*",
                "*://*.daum.net/*"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "host_permissions": [
        "*://*.game.daum.net/*",
        "*://*.daum.net/*"
    ],
    "permissions": [
        "storage",
        "tabs"
    ]
}